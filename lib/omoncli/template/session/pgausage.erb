<%= render 'template/header.erb' %>

col id for 9
col sid for 9999
col serial for 99999
col spid for A10
col program for A30 heading 'Program'

set trim on trims on linesize 300 pagesize 4000 timing on;

spool <%= @filenamespool %> append

select a.inst_id id,
b.sid,
b.serial# serial,
a.spid,
a.program,
a.pga_used_mem,
a.pga_alloc_mem,
a.pga_freeable_mem,
a.pga_max_mem,
b.status
from gv$process a, gv$session b
where a.addr = b.paddr and background is null
order by a.inst_id, a.pga_alloc_mem desc
/

<%= render 'template/footer.erb' %>
