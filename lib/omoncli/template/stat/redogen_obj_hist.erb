define ash_time_format = 'dd-mm-yyyy HH24:MI:SS';
variable oldest varchar2(30);
variable latest varchar2(30);
variable vnumtop number;
begin
    :oldest := '<%= @bdate %>';
    :latest := '<%= @edate %>';
    :vnumtop := '<%= @numtop %>';
end;
/

set echo off feedback off heading on timi on pages 1000 lines 200 VERIFY OFF

spool <%= @filenamespool %> append
prompt numtop: <%= @numtop%>
prompt Bdate: <%= @bdate%>
prompt Edate: <%= @edate%>

--
-- Redo generation SQL top estimation from AWR history
-- Usage: SQL> @redogen_sql_hist "03-Sep-13 16:00" "03-Sep-13 17:00" 10
--

col WHEN for a34
col INST_ID for 9999999
col COMMAND for a20
col SQL_ID for a13
col SQL_TEXT for a100
col buffer_gets_range for a12
col object_name for a30
col table_name for a30
col subobject_name for a30

select * from (
SELECT to_char(min(begin_interval_time),'DD-Mon-YY HH24:MI') || ' - ' ||
       to_char(max(end_interval_time),'DD-Mon-YY HH24:MI') as WHEN,
       nvl(dhso.object_name, 'obj#'||obj#||' dataobj#'||dataobj#) as object_name,
       dhso.subobject_name,
       dhso.object_type,
       i.table_name,
       sum(db_block_changes_delta) as db_block_changes,
       to_char(round((RATIO_TO_REPORT(sum(db_block_changes_delta)) OVER ())*100,2),'99.00') as REDO_PERCENT
  FROM dba_hist_seg_stat dhss
       join dba_hist_snapshot dhs using(snap_id, instance_number)
       left join dba_hist_seg_stat_obj dhso  using(obj#, dataobj#)
       left join dba_indexes i on dhso.owner = i.owner and dhso.object_name = i.index_name and dhso.object_type like 'INDEX%'
  WHERE begin_interval_time BETWEEN to_date(:oldest, '&ash_time_format')
                                AND to_date(:latest, '&ash_time_format')
  GROUP BY --to_char(begin_interval_time,'YY-MM-DD HH24:MI'),
       dhso.object_type,
       nvl(dhso.object_name, 'obj#'||obj#||' dataobj#'||dataobj#),
       dhso.subobject_name,
       i.table_name
  ORDER BY --to_char(begin_interval_time,'YY-MM-DD HH24:MI'),
           db_block_changes desc
) where rownum <= :vnumtop
/

